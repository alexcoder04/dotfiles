
set ssl_starttls = yes
set ssl_force_tls = yes

set header_cache = "~/.cache/neomutt"
set message_cachedir = "~/.cache/neomutt"

set imap_check_subscribed = yes
set imap_list_subscribed = yes
set mail_check = 60
unset imap_passive
set mail_check_stats

set timeout = 5
set date_format = "%a,%d.%m"
set sort = "reverse-date"
set index_format = "%2C %Z %d %-25.25F %s (%-4.4c)"
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"

set editor = "nvim"
set new_mail_command = "notify-send '%n/%u new mail(s)'"

source "~/.config/neomutt/dracula.muttrc"
source `/bin/ls ~/.config/neomutt/login-*.muttrc | rofi -dmenu -i -p account`
source "~/.config/neomutt/aliases.muttrc"
source "~/.config/neomutt/keybinds.muttrc"

