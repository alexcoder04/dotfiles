#!/usr/bin/zsh
#        _                        _            ___  _  _
#   __ _| | _____  _____ ___   __| | ___ _ __ / _ \| || |
#  / _` | |/ _ \ \/ / __/ _ \ / _` |/ _ \ '__| | | | || |_
# | (_| | |  __/>  < (_| (_) | (_| |  __/ |  | |_| |__   _|
#  \__,_|_|\___/_/\_\___\___/ \__,_|\___|_|   \___/   |_|
#
# Copyright (c) 2021 alexcoder04 <https://github.com/alexcoder04>
#      
# zsh config

# ---------------------------------------------------------
# CHECK IF RUNNING IN INTERACTIVE MODE
# ---------------------------------------------------------
[[ -o interactive ]] || exit

# ---------------------------------------------------------
# SOURCE OTHER FILES
# ---------------------------------------------------------
source "$ZDOTDIR/cursor.zsh"
source "$ZDOTDIR/abbreviations.zsh"
source "$ZDOTDIR/aliases.zsh"
source "$ZDOTDIR/bookmarks.zsh"
source "$ZDOTDIR/functions.zsh"
[ -f "$XDG_CONFIG_HOME/lf/vars.sh" ] && source "$XDG_CONFIG_HOME/lf/vars.sh"

# ---------------------------------------------------------
# HISTORY CONFIGURATION
# ---------------------------------------------------------
setopt HIST_SAVE_NO_DUPS
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
HISTORY_IGNORE="(git add *|git commit *|* && exa --icons|mpv http*)"
HISTFILE=~/.cache/zsh/zsh_history
HISTSIZE=10000
SAVEHIST=10000

# ---------------------------------------------------------
# AUTOCOMPLETION
# ---------------------------------------------------------
autoload -U compinit
zstyle :compinstall filename "$XDG_CONFIG_HOME/zsh/zshrc"
zstyle ':completion:*' menu select
zmodload zsh/complist
compinit
_com_options+=(globdots)

# ---------------------------------------------------------
# CD INTO FOLDER SELECTED INSIDE LF
# ---------------------------------------------------------
# from https://github.com/LukeSmithxyz/voidrice/blob/master/.config/zsh/.zshrc
lfcd () {
    tmp="$(mktemp)"
    lf -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp" >/dev/null
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}

# ---------------------------------------------------------
# KEYBINDINGS
# ---------------------------------------------------------
KEYTIMEOUT=3
# vi mode
bindkey -v
# vi navigation in menu
bindkey -M menuselect 'h' vi-backward-char
bindkey -M menuselect 'j' vi-down-line-or-history
bindkey -M menuselect 'k' vi-up-line-or-history
bindkey -M menuselect 'l' vi-forward-char
# edit command in editor
autoload edit-command-line; zle -N edit-command-line
bindkey '^e' edit-command-line
# run stuff on key press
bindkey -s '^o' 'lfcd\n'
bindkey -s '^b' ' &>/dev/null & disown'

# ---------------------------------------------------------
# OTHER SETTINGS
# ---------------------------------------------------------
setopt autocd
unsetopt beep extendedglob notify

# ---------------------------------------------------------
# PROMPT
# ---------------------------------------------------------
case "$TERM" in
    xterm*)
        export STARSHIP_CONFIG="$HOME/.config/starship.toml"
        eval "$(starship init zsh)" ;;
    screen)
        export STARSHIP_CONFIG="$HOME/.config/starship-ascii.toml"
        eval "$(starship init zsh)" ;;
    *)
        export STARSHIP_CONFIG="$HOME/.config/starship-ascii.toml"
        eval "$(starship init zsh)" ;;
esac
[ -z "$LF_LEVEL" ] && source "$ZDOTDIR/startup.zsh"

# ---------------------------------------------------------
# SYNTAX HIGHLIGHTING
# ---------------------------------------------------------
source "+ZSH_SYNTAX_PLUGIN+"

