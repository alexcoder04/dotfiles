# i3 (x11) options

# Colors
set_from_resource $green      i3wm.color2   #00ff00
set_from_resource $red        i3wm.color1   #ff0000
set_from_resource $blue       i3wm.color6   #008888
set_from_resource $white      i3wm.color7   #ffffff
set_from_resource $black      i3wm.color0   #000000
set_from_resource $light_grey i3wm.color8   #555555
set_from_resource $dark_grey  i3wm.color15  #dddddd

# restart wm
bindsym $alt+Ctrl+r restart

# show/hide dropdown terminal
bindsym $mod+s scratchpad show; move position center

# dropdown terminal definition
for_window [class="dropdown"] floating enable
for_window [class="dropdown"] resize set 1500 800
for_window [class="dropdown"] move scratchpad
for_window [class="dropdown"] border pixel 7

# floating windows
for_window [class="i3_float"]             floating enable
for_window [class="Qemu-system-x86_64"]   floating enable
for_window [class="Pavucontrol"]          floating enable
for_window [class="TIPP10"]               floating enable
for_window [class="Gnome-2048"]           floating enable
for_window [class="Signal"]               floating enable
for_window [class="Catfish"]              floating enable
for_window [class="Gpick"]                floating enable
for_window [class="calculator"]           floating enable
for_window [class="Cinnamon-settings.py"] floating enable

# app to workspace
assign [class="Firefox"]        $w1_browser
assign [class="qutebrowser"]    $w1_browser
assign [class="vlc"]            $w2_media
assign [class="Signal"]         $w8_browser2
assign [class="obs"]            $w2_media
assign [class="mpv"]            $w2_media

