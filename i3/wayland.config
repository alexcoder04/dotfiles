# sway (wayland) options

# Colors
set $green      +COLOR_GREEN+
set $red        +COLOR_RED+
set $blue       +COLOR_BLUE+
set $white      +COLOR_WHITE+
set $black      +COLOR_BLACK+
set $light_grey +COLOR_LIGHT_GREY+
set $dark_grey  +COLOR_DARK_GREY+

# reload config
bindsym $alt+Ctrl+r reload

# show/hide dropdown terminal
bindsym $mod+s scratchpad show; move position center

# dropdown terminal definition
for_window [app_id="dropdown"] floating enable
for_window [app_id="dropdown"] resize set 1500 800
for_window [app_id="dropdown"] move scratchpad
for_window [app_id="dropdown"] border pixel 7

# floating windows
for_window [app_id="i3_float"]             floating enable
for_window [app_id="Qemu-system-x86_64"]   floating enable
for_window [app_id="Pavucontrol"]          floating enable
for_window [app_id="TIPP10"]               floating enable
for_window [app_id="Gnome-2048"]           floating enable
for_window [app_id="Signal"]               floating enable
for_window [app_id="Catfish"]              floating enable
for_window [app_id="Gpick"]                floating enable
for_window [app_id="calculator"]           floating enable
for_window [app_id="Cinnamon-settings.py"] floating enable

# app to workspace
assign [app_id="Firefox"]        $w1_browser
assign [app_id="qutebrowser"]    $w1_browser
assign [app_id="vlc"]            $w2_media
assign [app_id="Signal"]         $w8_browser2
assign [app_id="obs"]            $w2_media
assign [app_id="mpv"]            $w2_media

# keyboard stuff
input type:keyboard {
    xkb_layout de
    xkb_options caps:escape
    repeat_delay 200
    repeat_rate 70
}

# tap to click
input type:touchpad {
    tap enable
}

