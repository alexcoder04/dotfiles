# sway (wayland) options

# Colors
set $green		+COLOR_GREEN+
set $red		+COLOR_RED+
set $blue		+COLOR_BLUE+
set $white		+COLOR_WHITE+
set $black		+COLOR_BLACK+
set $light_grey	+COLOR_LIGHT_GREY+
set $dark_grey	+COLOR_DARK_GREY+

# reload config
bindsym $alt+Ctrl+r reload

# show/hide dropdown terminal
bindsym $mod+s scratchpad show; move position center

# dropdown terminal definition
for_window [app_id="dropdown"] floating enable
for_window [app_id="dropdown"] resize set 1500 800
for_window [app_id="dropdown"] move scratchpad
for_window [app_id="dropdown"] border pixel 7

# keyboard stuff
input type:keyboard {
    xkb_layout de
    xkb_options caps:escape
    repeat_delay 200
    repeat_rate 70
}

# tap to click
input type:touchpad {
    tap enable
}

