#!/bin/sh

SOURCE_FILE="../i3-base/config"
CONFIG_DIR="$XDG_CONFIG_HOME/i3"
THEME_FILE="$XDG_DATA_HOME/bumblebee-status/themes/dracula-powerline.json"

[ -d "$CONFIG_DIR" ] || mkdir -p "$CONFIG_DIR"

echo "$SOURCE_FILE -> $CONFIG_DIR/config"
cat "$SOURCE_FILE" | ../reconf "../defaults" "../$1.prefs" \
	> "$CONFIG_DIR/config"
cp -v "dracula-powerline.json" "$THEME_FILE"
cp -v "../i3-base/lock.png" "$CONFIG_DIR/"
echo "NOTE: YOU NEED TO RESTART I3 TO APPLY THE NEW CONFIGURATION"

