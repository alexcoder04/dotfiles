#!/bin/bash

CONFIG_FOLDER="$XDG_CONFIG_HOME/alacritty"
[ -d "$CONFIG_FOLDER" ] || mkdir -vp "$CONFIG_FOLDER"

case "$RECONF_THEME" in
  dracula) opacity="0.7" ;;
  *) opacity="0.85" ;;
esac

cat <<EOF >"$CONFIG_FOLDER/alacritty.yml"
# generated by alexcoder04 dotfiles alacritty theme generator: $RECONF_THEME
env:
  TERM: xterm-256color

window:
  opacity: $opacity
  padding:
    x: 5
    y: 5
  decorations: full

font:
  normal:
    family: $RECONF_FONT
    style: Medium
  bold:
    family: $RECONF_FONT
    style: Bold
  italic:
    family: $RECONF_FONT
    style: Italic
  bold_italic:
    family: $RECONF_FONT
    style: Bold Italic
  size: 13.5

draw_bold_text_with_bright_colors: true

key_bindings:
  - { key: Up,    mods: Shift,   mode: ~Alt,        action: ScrollHalfPageUp,  }
  - { key: Down,  mods: Shift,   mode: ~Alt,        action: ScrollHalfPageDown }

colors:
  primary:
    background: '$RECONF_COLOR_BLACK'
    foreground: '$RECONF_COLOR_WHITE'
  cursor:
    text:   CellBackground
    cursor: CellForeground
  normal:
    black:   '$RECONF_COLOR_BLACK'
    red:     '$RECONF_COLOR_RED'
    green:   '$RECONF_COLOR_GREEN'
    yellow:  '$RECONF_COLOR_YELLOW'
    cyan:    '$RECONF_COLOR_CYAN'
    magenta: '$RECONF_COLOR_MAGENTA'
    blue:    '$RECONF_COLOR_BLUE'
    white:   '$RECONF_COLOR_WHITE'
  bright:
    black:   '$RECONF_COLOR_BRIGHT_BLACK'
    red:     '$RECONF_COLOR_BRIGHT_RED'
    green:   '$RECONF_COLOR_BRIGHT_GREEN'
    yellow:  '$RECONF_COLOR_BRIGHT_YELLOW'
    blue:    '$RECONF_COLOR_BRIGHT_CYAN'
    magenta: '$RECONF_COLOR_BRIGHT_MAGENTA'
    cyan:    '$RECONF_COLOR_BRIGHT_BLUE'
    white:   '$RECONF_COLOR_BRIGHT_WHITE'
  dim:
    black:   '$RECONF_COLOR_DIM_BLACK'
    red:     '$RECONF_COLOR_DIM_RED'
    green:   '$RECONF_COLOR_DIM_GREEN'
    yellow:  '$RECONF_COLOR_DIM_YELLOW'
    blue:    '$RECONF_COLOR_DIM_CYAN'
    magenta: '$RECONF_COLOR_DIM_MAGENTA'
    cyan:    '$RECONF_COLOR_DIM_BLUE'
    white:   '$RECONF_COLOR_DIM_WHITE'
EOF

