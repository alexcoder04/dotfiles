# m h  dom mon dow   command

#5 */2 * * * /usr/bin/apt update

# trim file systems every wednesday at 16:00
0 16 * * 3 /usr/bin/fstrim /
1 16 * * 3 /usr/bin/fstrim /home
2 16 * * 3 /usr/bin/fstrim /boot

