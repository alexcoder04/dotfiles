# Bash aliases

# ---------------------------------------------------------
# ls
# ---------------------------------------------------------
alias ls="ls --color=auto"
alias ll="ls -alF --color=auto"
alias la="ls -AlF --color=auto"

# ---------------------------------------------------------
# grep
# ---------------------------------------------------------
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# ---------------------------------------------------------
# (n)vim
# ---------------------------------------------------------
alias vim="nvim"
alias v="nvim"

# ---------------------------------------------------------
# file operations
# ---------------------------------------------------------
alias ln="ln -v"
alias mv="mv -vi"
alias rm="rm -vi"
alias cp="cp -vi"

# ---------------------------------------------------------
# other stuff
# ---------------------------------------------------------
alias :q="exit"
alias cls="[ $[$RANDOM % 3] = 0 ] && timeout 0.7 cmatrix -u 2 || clear"

